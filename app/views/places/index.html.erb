<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1 id="placenameindex"><%= link_to place.name, place_path(place) %></h1>
    <i id="placeaddressindex"><%= place.address %></i><br /><br />
    <p id="placedescindex"><%= place.description %></p><br />
  
    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b>
          <% end %>
          <%= place.comments.last.message %>
        </blockquote>
      </div>
    <% end %>
    <% if place.images.present? %>
      <div class="col-12">
        <blockquote>
          <img class="img-thumbnail" src="<%= place.images.last.image %>">
        </blockquote>
      </div>
    <% end %>  
  </div>
<% end %>

<%= will_paginate @page, previous_label: h("<"), next_label: h(">") %>

